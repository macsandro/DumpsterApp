<%- model_class = Project -%>
<div class="page-header">
 <!--  <h2><%=t '.title', default: model_class.model_name.human.pluralize.titleize %></h2> -->
  
  <h3>Projects for <%= @customer.name%></h3>
 
  

</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:city) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:zip_code) %></th>
      <th><%= model_class.human_attribute_name(:contact) %></th>
      <th><%= model_class.human_attribute_name(:phone_number) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', default: t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>

          <td><%= project.name %></td>
          <td><%= project.address %></td>
          <td><%= project.city %></td>
          <td><%= project.state %></td>
          <td><%= project.zip_code %></td>
          <td><%= project.contact %></td>
          <td><%= project.phone_number %></td>
        <td><%=l project.created_at, format: :long %></td>
        <td>
          <%= link_to customer_project_path(@customer,project), class: 'btn btn-xs', title: "#{ t('.show', default: t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
          <%- end -%>
          <%= link_to edit_customer_project_path(@customer,project), class: 'btn btn-xs', title: "#{ t('.edit', default: t('helpers.links.edit')) }" do %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to customer_project_path(@customer,project), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs', title: "#{ t('.destroy', default: t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', default: t("helpers.links.new")),
            new_customer_project_path,
            class: 'btn btn-primary' %>
