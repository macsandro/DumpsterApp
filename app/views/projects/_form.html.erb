<%= form_for ([@customer, @project]), html: { class: 'form-horizontal' } do |f| %>


  <div class="form-group">
    <%= f.label :customer_id, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :customer_id, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :name, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :name, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :address, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :city, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :city, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :state, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :state, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :zip_code, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :zip_code, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :contact, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :contact, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone_number, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :phone_number, class: 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")), customer_projects_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
